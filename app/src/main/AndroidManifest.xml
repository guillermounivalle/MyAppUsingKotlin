        </activity>
        <activity android:name=".Activities.ClickEventeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
        </activity>
        <activity android:name=".Activities.AndroidExtensionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
        </activity>
        <activity android:name=".Activities.PicassoActivity" />
        <activity android:name=".Activities.ListViewActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
        </activity>
        <activity android:name=".Activities.IntentsActivity" />
        <activity android:name=".Activities.PermissionsActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
    </activity>
        <activity android:name=".Activities.SharedPreferences" />
        <activity android:name=".Activities.ExtensionsFunctions" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
        </activity>
        <activity android:name=".Activities.LifeCyclesActivity" />
        <activity android:name=".others.LifeCycleEventsActivity" />
        <activity android:name=".Activities.IntentExtrasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guillermoandres.myappusingkotlin.MainActivity" />
        </activity>
        <activity android:name=".others.ToolbarActivity"></activity>
